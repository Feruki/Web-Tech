<!DOCTYPE html>
<html lang="de">
    <head>
        <title>#Liste - Spaß mit Tutorials</title>
        <link rel="stylesheet" href="/css/flexbox.css">
        <link rel="stylesheet" href="/css/tiles.css">
        <link rel="stylesheet" href="/css/styles.css">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body>
        
        <div id="main">
            <header>
                <img height=80 src="/img/bild_von_fun.png" alt="Bild von fun">
                <h1>Spaß mit Tutorials</h1>
            </header>
            <nav>
                <a href="/">List</a>
                <span>│</span>
                <a href="/tutorials">Tutorials</a>
                <span>│</span>
                <a href="/tutorial">Tutorial</a>
                <span>│</span>
                <a href="/form">Tutorial anlegen</a>
            </nav>


            <!-- Haupt / Zusatz -->
            <div id="content">

                <!-- Hauptinhalt -->
                <main id="mainContent">

                    <!-- Suchformular -->
                    <div id="search">
                        <form action="/" method="get"> 
                            <input id="formInput" type="text" placeholder="Name der Kategorie" name="search" size="20" minlength="4" maxlength="20" pattern="[A-Z]{1}[A-Za-z]{0,20}" required>
                            <button type="submit" onclick="openTutorial()">Suchen!</button>
                        </form>
                    </div>

                    <!-- Liste der Kategorien -->
                    <section id="list">
                        <%
                        if(query) {
                        %>
                            <h2>Tutorials mit: <%= query %></h2>
                        <%
                        }
                        %>

                        <%
                        for(let i = 0 ; i < tutorials.length ; i++) {
                            let tutorial = tutorials[i];
                        %>
                            <div class="card">
                                <img height="150" src="<%= tutorial.bild.url %>" alt="<%= tutorial.bild.titel %>"/>
                                <div>
                                    <h3><a href="tutorials/<%= i %>"><%= tutorial.name %></a></h3>
                                    <p><%= tutorial.beschreibung %></p>
                                </div>
                            </div>
                        <%
                        }

                        if(tutorials.length == 0) {
                        %>
                            <h2>Keine Tutorials gefunden</h2>
                        <%
                        }
                        %>

                        <!-- Leere Kacheln um die Zeilen aufzufüllen -->
                        <div class="card empty"></div>
                        <div class="card empty"></div>
                        <div class="card empty"></div>
                        <div class="card empty"></div>
                        <div class="card empty"></div>
                        <div class="card empty"></div>

                    </section>

                </main>

                <!-- Zusatzinfos -->
                <div id="addContent">
                    <h3>Neuste Tutorials: </h3>
                    <ul>
                        <li>Titel, Datum, Dauer</li>
                        <li>Titel, Datum, Dauer</li>
                        <li>Titel, Datum, Dauer</li>
                        <li>Titel, Datum, Dauer</li>
                    </ul>
                </div>

            </div>

            <footer>
                <a href="https://discord.gg/j5UQaPQNYf"><u>Managed by Kegelclub e.V. gGmbH</u></a>
                <p><i>© by Tutorials Inc. e.V. gGmbH & co. KG partnered with Tutorial AG</i></p>
            </footer>
        </div>


        <!-- Scripts -->
        <!-- <script src="assets/js/viewport.js"></script> -->
    </body>
</html>